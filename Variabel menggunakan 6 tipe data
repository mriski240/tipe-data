#include <iostream>
using namespace std;
int main ()
{
	string nama;
	int umur;
	float tinggi;
	double kebugaran_tubuh;
	char jenis_kelamin;
	bool a,b;

	cout << " Masukkan Nama "<< endl;
	cout << "\nJawab =";
	getline (cin, nama);
	
	cout << "\n\nMasukkan umur " << endl;
	cout << "\nJawab =";
	cin>> umur;
	
	cout << " \n\nMasukkan tinggi badanmu " << endl;
	cout << "\nJawab =";
	cin>> tinggi;
	
	cout << " \n\nBagaimana Kondisi kebugaran tubuhmu "<<endl;
	cout << "\nJawab =";
	cin >> kebugaran_tubuh;
	
	cout << " \n\nJenis kelamin [Laki-laki/Perempuan]:" <<endl;
	cout << " \nJawab =";
	cin >> jenis_kelamin;
	
	b = jenis_kelamin == 'L'||jenis_kelamin == 'l';
	a = jenis_kelamin == 'P'||jenis_kelamin == 'p';
	
	cout << "\n\nsalam kenal, "<<nama;
	cout << "nmasukkan usia" << umur <<"tahun" << endl;
	cout << "masukkan tinggi badanmu" <<tinggi<<endl;
	cout << "kebugaran tubuhmu"<<kebugaran_tubuh<<endl;
	cout << "jenis kelaminmu" <<jenis_kelamin;
	cout << "\ndan";
	if (a)
	{
		cout << " saya laki-laki\n";
	}
	else if (b)
	{
		cout << "saya juga laki-laki\n";
	}
	
	return 0;
}
